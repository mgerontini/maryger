/* ----- Basics - HTML and Body ----- */
* {
  margin:               0;
  padding:              0;
}

html {
  text-align:           justify;
  height:               100%;
  width:                100%;
  background-color:     #fff;
  font-family:          "Lucida Sans", Helvetica, Arial, sans-serif;
  color:                #000000;
  font-size:            0.76em;
  line-height:          1.6em;
}


body {
  max-width:            60%;
  min-width:            310px;
  margin:               3% auto 2% auto;
  height:               auto;
  border-radius:        40px;
  border:               1px solid rgba(0,0,0,0.1);
  padding:              10px;
  background-color:     #37B7DD;
  color:                white;
  background-image:     -webkit-radial-gradient(center 0px, 140% 70%, #67CAEA 60%, #3EBDDE 63%);
  background-image:     -o-radial-gradient(center 0px, 140% 70%, #67CAEA 60%, #3EBDDE 63%);
  background-image:     -radial-gradient(center 0px, 140% 70%, #67CAEA 60%, #3EBDDE 63%);
  background-image:     -moz-radial-gradient(center -50%, circle cover, #67CAEA 60%, #3EBDDE 63%);
}


h1 {
  font-size:            2.0em;
  text-align:           center;
  margin-bottom:        4px;
}


/* --- Main content elements ---- */
body > div {
  border:               12px solid rgba(255,255,255,0.5);
  border-radius:        40px;
  padding:              3%;
}


/* ---- Specific content elements ---- */

/* -----  Frontpage: text input  ----- */
body > div > form > input {
  margin-left:          14%;
  text-align:           center;
  width:                70%;
  height:               20px;
  padding:              1%;
  border:               1px solid white;
  border-radius:        8px;
  background-color:     white;
  color:                #1F5968;
}

/* ----  Frontpage: submit button ---- */
.button {
  width:                30%;
  margin-left:          34%;
  height:               30px;
}

.button:hover {
  background-color:     #eee;
  cursor:               pointer;
  border:               none;
}

/* -----   Results: chart div's  ----- */
div.chartContainer {
  width:                80%;
  margin-left:          10%;
  background-color:     white;
  border-radius:        19px;
  padding-bottom:       1%;
}

div.chartContainer > div {
  width:                100%;
  height:               200px;
}